<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- EditText line -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--设置title颜色 -->
        <item name="titleTextColor">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/bg_color</item>

        <!-- design error color-->
        <item name="textColorError">@color/textColorError</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="HintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8bc34a</item>
    </style>


    <style name="ErrorAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#a2ced1</item>
    </style>


    <style name="CounterAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#17ffe6</item>
    </style>


    <style name="CounterOverflowAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fbd041</item>
    </style>


    <style name="Base.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#fbd041</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/TextAppearance</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.TabLayout">
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabTextColor">#99ffffff</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>
